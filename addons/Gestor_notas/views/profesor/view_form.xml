<odoo>
    <!-- Vista de Formulario para Profesor -->
    <record model="ir.ui.view" id="view_profesor_form">
        <field name="name">profesor.ver.form</field>
        <field name="model">gestor.profesor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="apellido"/>
                        <field name="no_identif"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>